{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="bg-light mt-4 p-4">
				<h1>Register</h1>

				{#
																{% if is_granted('EDIT', RelatedUserTable) %}
																<a href="{{ path('app_relatedUserTable_edit', {
																	slug: RelatedUserTable.slug
																}) }}" class="btn btn-secondary btn-sm mb-2">Edit</a>
																{% endif %}
																#}

				{{ form_start(registrationForm) }}

				{{ form_row(registrationForm.name) }}


				<div class="row">
					<div class="col">
						{{ form_row(registrationForm.email) }}
					</div>
					<div class="col">
						{{ form_row(registrationForm.phone) }}
					</div>

				</div>

				{{ form_row(registrationForm.address) }}

				<div class="row">
					<div class="col">
						{{ form_row(registrationForm.country) }}
					</div>
					<div class="col">
						{{ form_row(registrationForm.province) }}
					</div>

					<div class="col">
						{{ form_row(registrationForm.city) }}
					</div>

				</div>


				{{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}

				<div class="mb-3">

					{% set aggre_i18n = 'I agree with the'|trans %}
					{% set privay_i18n = 'Privacy policy'|trans %}
					{% set terms_i18n = 'Terms and conditions'|trans %}

					{{ form_widget(registrationForm.agreeTerms, {
                        label:  aggre_i18n ~ ' <a target="_blank" href="' ~ path('app_terms') ~ '">' ~ privay_i18n ~ " / " ~  terms_i18n ~ '</a>',
                        label_html: true
                        })
                    }}
				</div>


				<div class="d-grid gap-2 my-3">
					<button type="submit" class="btn btn-primary">{{'Register'|trans}}</button>
				</div>


				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
