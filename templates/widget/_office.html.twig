{% set company = app.session.get('appParam') %}
{% set translation = obj_widget.getTranslation %}

<div class="container my-5">
    {% for office in company.offices  %}
    {% set officeTranslation = office.getTranslation() %}
    <div class="row justify-content-md-center">
        <div class="col-md-auto mb-5 text-center text-md-start  text-lg-start">
            <h2><i class="fas fa-map-marker-alt"></i> {{translation.name}}</h2>
                <p>{{officeTranslation.name}}</br>
                {{office.address}}<br>
                {{office.city}} {{office.province}} {{office.Country}}</p>        
        </div>
        <div class="col-1"></div>
        <div class="col-md-auto  mb-5 text-center text-md-start  text-lg-start">
            <h2><i class="fas fa-phone-volume"></i> {{'Customer Support'|trans}}</h2>
            <p>{{officeTranslation.hours}}<br>{{officeTranslation.days}}</p>
            <p>
                {{ ((office.phoneMain) ? office.phoneMain~'<br>': '')|striptags('<br>')|raw }}
                {{ ((office.phoneSales) ? office.phoneSales~'<br>': '')|striptags('<br>')|raw }}
                {{ ((office.phoneSupport) ? office.phoneSupport~'<br>': '')|striptags('<br>')|raw}}
            </p>
        </div>
    </div>
    {% endfor %}
</div>